<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient Background -->
    <gradient
        android:startColor="#FF6F61"
        android:endColor="#D14D47"
        android:angle="90" />

    <!-- Rounded Corners -->
    <corners android:radius="20dp" />

    <!-- Padding -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp" />

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#BB3A35" />

</shape>
