<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="#1A1A1A" /> <!-- Dark gray background -->

    <corners android:radius="16dp" /> <!-- Soft rounded corners if you want -->

    <padding
        android:top="4dp"
